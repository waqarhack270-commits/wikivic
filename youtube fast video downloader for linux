##a scrpt use to download audio aur video options

                                                                                      sudo apt update && sudo apt install -y yt-dlp ffmpeg aria2


#!/bin/bash

# Check required tools
for cmd in yt-dlp aria2c ffmpeg; do
    command -v "$cmd" &> /dev/null || {
        echo "‚ùå $cmd not found. Install with: sudo apt install -y yt-dlp ffmpeg aria2"
        exit 1
    }
done

downloads_dir="$HOME/Downloads"
mkdir -p "$downloads_dir"

while true; do
    # Get URL
    read -p "Enter YouTube URL: " url
    [[ -z "$url" || ! "$url" =~ ^https?:// ]] && { echo "‚ùå Invalid URL"; continue; }

    # Choose mode
    echo -e "\n1. Download video (MP4)\n2. Extract audio (MP3)"
    read -p "Select (1/2): " choice
    [[ "$choice" != "1" && "$choice" != "2" ]] && { echo "‚ùå Invalid choice"; continue; }

    # Common options
    opts=(
        --external-downloader aria2c
        --external-downloader-args "-x16 -s16 -k1M"
        -P "$downloads_dir"
        -o "%(title)s.%(ext)s"
        --no-warnings
        --embed-thumbnail
        --embed-metadata
    )

    # Action
    if [ "$choice" == "1" ]; then
        yt-dlp "${opts[@]}" -f "bestvideo[ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]" --merge-output-format mp4 "$url" \
        && echo -e "\n‚úÖ Video saved to $downloads_dir" || echo -e "\n‚ùå Download failed"
    else
        yt-dlp "${opts[@]}" -x --audio-format mp3 "$url" \
        && echo -e "\n‚úÖ MP3 saved to $downloads_dir" || echo -e "\n‚ùå Download failed"
    fi

    # Ask to continue
    read -p $'\nDo you want to download another? (y/n): ' again
    [[ "$again" != [Yy]* ]] && break
done

echo -e "\nüëã Exiting. Goodbye!"
exit 0



#ends
